<h1>投稿した言葉一覧</h1>
<%= link_to '新しい言葉を投稿する', new_word_path %>

  <table>
  <thead>
    <tr>
      <th><%= sort_link(@search, :title, "タイトル", default_order: :desc) %></th>
      <th><%= sort_link(@search, :word, "言葉", default_order: :desc) %></th>
      <th><%= sort_link(@search, :created_at, "投稿日", default_order: :desc) %></th>
      <th>タグ</th>
      <th>投稿者</th>
    </tr>
  </thead>

   <tbody>
    <% @search_words.each do |word| %>
      <tr>
        <td><%= link_to word.title,word_path(word.id) %></td>
        <td><%= link_to word.word,word_path(word.id) %></td>
        <td><%= word.created_at.strftime("%Y年%m月%d日") %></td>
        <td><%= render 'words/tag_list', tag_list: word.tag_list %></td>
        <td><%= link_to word.user.name, user_path(word.user.id) %></td>

          <% if word.user_id == current_user.id %>
          <td><%= link_to "編集", edit_word_path(word.id) %></td>
      　　<td><%= link_to '言葉の削除', word_path(word.id), method: :delete ,data: { confirm: '本当にこの言葉を削除してよろしいですか？' } %></td>
        <% end %>

      </tr>
    <% end %>
    </table>
  </tbody>
</table>

 <br>
<%= link_to '新しい言葉を投稿する', new_word_path %>

<%= paginate @search_words %>
